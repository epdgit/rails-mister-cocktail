<h2 class="text-white">Create your Cocktail</h2>
<%= simple_form_for [ @cocktail ] do |f| %>
  <%= f.input :name, label: "Cocktail name" %>
  <%= f.submit "submit", class: "btn btn-primary" %>
<% end %>

<p>
  <%= link_to cocktails_path do %>
    <i class="fa fa-reply mt-5" aria-hidden="true">Back to list</i>
  <% end %>
</p>

