<h2 class="ml-3 mb-3"><%= @cocktail.name %></h2>
<div class="card-product">
  <% if @cocktail.photo %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <p>
        <div >
          <table class="table text-white">
            <tbody>
              <thead>             
                <th>Ingredient</th>
                <th>Description</th>
                <th></th>
              </thead>
              <tr>
              <% @cocktail.doses.each do |dose| %>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <% if @cocktail.doses %>
                    <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} do %>
                      <i class="far fa-trash-alt ml-3" style="color: #4DB6AC"></i>
                      <% end %>
                    <% end %>
                </td>
              </tr>
              <% end %>  
            </tbody>
          </table>
        </div>
  </p>
</div>
  <%= link_to new_cocktail_dose_path(@cocktail.id) do %>
    <i class="fas fa-cocktail ml-5 mt-3" style="color: #4DB6AC"> Add ingredients/doses!</i>
  <% end %>


  <p class="back-to-list">
    <%= link_to cocktails_path do %>
      <i class="fa fa-reply fa-sm mt-5" aria-hidden="true"></i><span class="ml-1">Back to list</span>
    <% end %>
  </p>



