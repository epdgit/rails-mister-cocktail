<h1 class="index-head mb-5 ml-3">Cocktails</h1>

<ul class="card-cocktails">
    <% @cocktails.each do |cocktail| %>
      <li class="mt-5">
        <% if cocktail.photo %>
          <%= cl_image_tag cocktail.photo.key, height: 200, width: 300, crop: :fill %>
        <% end %>
        <%= link_to cocktail.name, cocktail_path(cocktail.id), class: "mt-3 mr-5" %>
      </li>
    <% end %>
</ul>

<%= link_to new_cocktail_path do %>
  <h4 class="create-new ml-5">
    <i class="fas fa-cocktail mt-3" style="color: #4DB6AC"> Create a new cocktail!</i>
  </h4>
  <%#= link_to "Create a new cocktail!", new_cocktail_path, class:"btn btn-primary" %>
<% end %>


